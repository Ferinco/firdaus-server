{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "target": "ES5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "baseUrl": ["src"],
          "*": [
              "node_modules/*"
          ],
          "@base/*": [
              "src/*"
          ],
          "@api/*": [
              "src/api/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*"
  ]
}